#!/usr/bin/env bash

echo "Initializing the deployment…"
echo "pwd →"
pwd
echo "config.production.json →"
cat "config.production.json"

bin/wait-for-db

mkdir content/themes/casper
mkdir content/adapters/storage/s3

cp -r node_modules/casper/ content/themes/casper
cp -r node_modules/ghost-storage-adapter-s3/ content/adapters/storage/s3

knex-migrator init --mgpath node_modules/ghost
